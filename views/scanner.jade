extends head

block content
    script(type='text/javascript').
       jQuery(document).ready(function($) {
           var progect =!{JSON.stringify(progect)}
           var html = progect[0].html;
           var css = progect[0].css;
           var js = progect[0].js;

           //- var builtWith = "<div class='github-fork-ribbon-wrapper left'> <div class='github-fork-ribbon'> <a href='https://github.com/simonwhitaker/github-fork-ribbon-css'>Build With Lando</a> </div> </div>";
           $('.dataHtml').val(html);
           $('.dataCss').val(css);
           $('.dataJs').val(js);
       });

    if (user)
        input(type="hidden" , value="#{user}")
    if (progect)
        input(type="hidden" , class="dataHtml")
        input(type="hidden" , class="dataCss")
        input(type="hidden" , class="dataJs")
    
    //-************************center*******************************
    .ui-layout-center
                 
          div#drow
            ol#selectable.parent
              div.child.layer

            side-bar
              tabs
                tab.layers(target='layers', touch-action='none')
                tab.basic(target='basic', touch-action='none')
                tab.border(target='border', touch-action='none')
                tab.shadows(target='shadows', touch-action='none')
                tab.text(target='text', touch-action='none')
                tab.text-shadow(target='text-shadow', touch-action='none')
                tab.filter(target='filter', touch-action='none')
                tab.transform(target='transform', touch-action='none')
                tab.settings(target='settings', touch-action='none')


              //-layers
              tab.active(name='layers')
                
                panel(name='layers')
                    legend Layers
                    menu
                      menu-item(action='up')
                      menu-item(action='down')
                      menu-item(action='remove')
                      menu-item.add(action='add')
                      menu-item(action='clone')
                    
                    ul#sortable
                      layer-item
                        icon.eye.selected.active
                        icon.lock
                        input(spellcheck='false')

                panel(name='basic' style="display:none;")
                    legend Basic
                    field(type='input')
                        input-number(class="inputWidth" label='width:',  uid='width', style='') 
                    
                    field(type='input')
                        input-number( class="inputheight" label='Height:',  uid='height', style='') 
                    
                    legend Background

                    field(type='input')
                        input-number(contenteditable='true', label='background:', affix='mm', touch-action='none', uid='hieght', style='') 1048
                    field(type='input')
                        input-number(contenteditable='true', label='background image:', affix='mm', touch-action='none', uid='hieght', style='') 1048

                
                panel(name='border' style="display:none;")
                    legend Border
                    menu
                      menu-item(action='up')
                      menu-item(action='down')
                      menu-item(action='remove')
                      menu-item.add(action='add')
                      menu-item(action='clone')
                   



          iframe(width='100%', height="2000px" frameborder='no', scrolling="no", class="mainContainer" src='/result') 

        

    //-************************top*******************************          
    .ui-layout-north North

    //-************************botyom******************************* 
    .ui-layout-south 
       div.editerWraper
          #template-html.editor.ui-widget-content.zoomTarget
          #template-css.editor.ui-widget-content
          #template-js.editor.ui-widget-content
    
    //-************************left******************************* 
    .ui-layout-west
      div.imageBlock
        img.img-responsive.zoomTarget(src='//cdn2.hubspot.net/hub/53/file-581676469-png/Blog-Related_Images/unbounce_landing_page.png?t=1441029868483&width=669')
        form(action="...", method="post", enctype="multipart/form-data")
          input(type="file", name="displayImage")



