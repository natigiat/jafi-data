extends layout

block content
 h1 Login
 p Please Login using the form below
 form(method='post' , action='/users/login', enctype='multipart/form-data')
      .form-group
        label Username
        input.form-control(type='text' , name='username' , placeholder='Enter username')
      .form-group
        label Password
        input.form-control(name='password' , type='password'  ,placeholder='Enter password...')
      button.btn.btn-default(type='submit' , value='Login') button